{
  "name": "@termlabs/terminaltranslator",
  "version": "0.3.0",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "exports": {
    ".": "./dist/index.js"
  },
  "description": "Simple terminal-based translation tool",
  "author": "termlabs",
  "license": "MIT",
  "keywords": [
    "cli",
    "translation",
    "translator",
    "ai",
    "llm",
    "bun",
    "tui",
    "terminal"
  ],
  "bin": {
    "terminaltranslator": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/termlabs/terminaltranslator.git"
  },
  "bugs": {
    "url": "https://github.com/termlabs/terminaltranslator/issues"
  },
  "homepage": "https://github.com/termlabs/terminaltranslator#readme",
  "scripts": {
    "dev": "NODE_ENV=development bun src/index.ts",
    "start": "bun src/index.ts",
    "build": "rm -rf dist && bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit",
    "check": "biome check .",
    "fix": "biome check --write ."
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@opentui/core": "^0.1.75",
    "clipboardy": "^5.2.0"
  }
}
